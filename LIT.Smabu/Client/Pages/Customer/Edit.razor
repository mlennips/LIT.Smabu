@page "/customers/{Id:guid}"
@using LIT.Smabu.Shared.Commands;
@using LIT.Smabu.Shared.Dtos;
@using Microsoft.AspNetCore.Authorization;
@inject HttpClient Http
@attribute [Authorize]

<PageHeader PageTitle="@("Kunde" + @Model?.Name1)">

</PageHeader>

@if(Model != null)
{
    <EditForm Model="@Model" OnValidSubmit="@SubmitAsync">
        <div class="row">
            <div class="col-md-6">
                <label for="Name1" class="form-label">Name</label>
                <InputText class="form-control" @bind-Value="Model.Name1" />
                <ValidationMessage For="@(() => Model.Name1)" />
            </div>
            <div class="col-md-6">
                <label for="Name2" class="form-label">Name 2</label>
                <InputText class="form-control" @bind-Value="Model.Name2" />
                <ValidationMessage For="@(() => Model.Name2)" />
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <button class="btn btn-light" @onclick="Back">Cancel</button>
        </div>
    </EditForm>
}

@code {
    @inject NavigationManager NavigationManager;

    [Parameter]
    public Guid Id { get; set; }
    public Smabu.Shared.Commands.Customer.EditCustomer Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var customer = await Http.GetFromJsonAsync<CustomerDetailDto>("customers/" + Id) ?? throw new Exception("NotFound");
        this.Model = new()
        {
            Id = customer.Id,
            Name1 = customer.Name1,
            Name2 = customer.Name2,
            IndustryBranch = customer.IndustryBranch
        };
    }

    private async Task SubmitAsync()
    {
        using var response = await Http.PutAsJsonAsync("customers", Model);
        NavigationManager.NavigateTo("/customers");
    }

    public void Back()
    {
        NavigationManager.NavigateTo("/customers");
    }
}