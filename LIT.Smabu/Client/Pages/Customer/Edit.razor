@page "/customers/{Id:guid}"
@using LIT.Smabu.Domain.Shared.Common;
@using LIT.Smabu.Domain.Shared.Customers.Queries;
@using LIT.Smabu.Domain.Shared.Customers.Commands;
@using Microsoft.AspNetCore.Authorization;

@inject HttpClient Http
@attribute [Authorize]

<PageHeader PageTitle="@("Kunde " + @Model?.Name)">

</PageHeader>

@if (Model != null)
{
    <EditForm Model="@Model" OnValidSubmit="@SubmitAsync">
        <div class="row">
            <div class="col-md-6">
                <label for="Name" class="form-label">Name</label>
                <InputText class="form-control" @bind-Value="Model.Name" />
                <ValidationMessage For="@(() => Model.Name)" />
            </div>
            <div class="col-md-6">
                <label for="IndustryBranch" class="form-label">Name</label>
                <InputText class="form-control" @bind-Value="Model.IndustryBranch" />
                <ValidationMessage For="@(() => Model.IndustryBranch)" />
            </div>
        </div>
        <div class="row">
        </div>


        <FormFooter BackUrl="/customers">
            <Actions>
                <button type="submit" class="btn btn-success">Speichern</button>
            </Actions>
        </FormFooter>
    </EditForm>
}

@code {
    @inject NavigationManager NavigationManager;

    [Parameter]
    public Guid Id { get; set; }
    public GetCustomerDetailsResponse Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        this.Model = await Http.GetFromJsonAsync<GetCustomerDetailsResponse>("Customers/" + Id) ?? throw new Exception("NotFound");
    }

    private async Task SubmitAsync()
    {
        var command = new EditCustomerCommand()
            {
                Id = Model.Id,
                Name = Model.Name,
                IndustryBranch = Model.IndustryBranch,
                MainAddress = Model.MainAddress.ToValueObject(),
                Communication = Model.Communication.ToValueObject()
            };
        using var response = await Http.PutAsJsonAsync("Customers/" + Id, command);
        NavigationManager.NavigateTo("/customers");
    }
}