@page "/customers"
@using LIT.Smabu.Shared.Commands;
@using LIT.Smabu.Shared.Dtos;
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication;
@inject HttpClient Http
@attribute [Authorize]

<PageTitle>Kunden</PageTitle>
<h3>Kunden</h3>
<input type="button" @onclick="CreateNewAsync" />

@if (customers == null)
{
    <p><em>Loading...</em></p>
}
else if (customers.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nr.</th>
                <th>Name 1</th>
                <th>Name 2</th>
                <th>IndustryBranch</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in customers)
            {
                <tr>
                    <td>@customer.Number</td>
                    <td>@customer.Name1</td>
                    <td>@customer.Name2</td>
                    <td>@customer.IndustryBranch</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>Keine Daten</em></p>
}

@code {
    @inject NavigationManager NavigationManager;
    private CustomerOverviewDto[]? customers;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            customers = await Http.GetFromJsonAsync<CustomerOverviewDto[]>("customers");
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }

    public async Task CreateNewAsync()
    {
        var postBody = new CreateCustomer("Name 1", "Name2");
        using var response = await Http.PostAsJsonAsync("customers", postBody);
        var customer = await response.Content.ReadFromJsonAsync<CustomerOverviewDto>();
        NavigationManager.NavigateTo("/customers", true);
    }
}