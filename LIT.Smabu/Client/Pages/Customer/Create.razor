@page "/customers/create"
@using LIT.Smabu.Shared.Commands.Customer;
@using Microsoft.AspNetCore.Authorization;
@inject HttpClient Http
@attribute [Authorize]

<PageTitle>Erstelle Kunde</PageTitle>
<h3>Erstelle Kunde</h3>

<EditForm Model="@Model" OnValidSubmit="@SubmitAsync">
    <div class="row">
        <div class="col-md-6">
            <label for="Name1" class="form-label">Name</label>
            <InputText class="form-control" @bind-Value="Model.Name1" />
            <ValidationMessage For="@(() => Model.Name1)" />
        </div>
        <div class="col-md-6">
            <label for="Name2" class="form-label">Name 2</label>
            <InputText class="form-control" @bind-Value="Model.Name2" />
            <ValidationMessage For="@(() => Model.Name2)" />
        </div>
    </div>  
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <button class="btn btn-light" @onclick="Cancel">Cancel</button>
    </div>
</EditForm>

@code {
    @inject NavigationManager NavigationManager;

    public CreateCustomer Model { get; } = new() { Name1 = "", Name2 = "" };

    private async Task SubmitAsync()
    {
        using var response = await Http.PostAsJsonAsync("customers", Model);
        NavigationManager.NavigateTo("/customers");
    }

    public void Cancel()
    {
        NavigationManager.NavigateTo("/customers");
    }
}