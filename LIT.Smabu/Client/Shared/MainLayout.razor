@using LIT.Smabu.Client.Services;
@inject PageInfoService pageInfoService;
@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudText Edge="Edge.End" Color="Color.Inherit">
            <LoginDisplay />
        </MudText>       
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader Dense="true">
            <MudText Typo="Typo.h6" Class="mt-1 ml-n1">smabu</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Fixed="true" Class="pt-10 pt-10">
            @Body
        </MudContainer>
        <MudOverlay Visible="this._isBusyOverlay" DarkBackground="true">
            <MudProgressCircular Color="Color.Secondary" Indeterminate="true" />
        </MudOverlay>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    bool _isBusyOverlay = false;

    protected override void OnInitialized()
    {
        pageInfoService.OnShowBusyOverlay += ShowLoadingSpinner;
        pageInfoService.OnHideBusyOverlay += HideLoadingSpinner;
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }


    public void ShowLoadingSpinner()
    {
        _isBusyOverlay = true;
        if (_isBusyOverlay == true)
            StateHasChanged();
    }

    async public void HideLoadingSpinner()
    {
        _isBusyOverlay = false;
        await Task.Delay(250);
        if (_isBusyOverlay == false)
            StateHasChanged();
    }
}