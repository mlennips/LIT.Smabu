@page
@model LIT.Smabu.Web.Areas.Offers.Pages.ItemDetailsModel

@{
    ViewData["Title"] = "Angebot/Position";
}
<vc:page-header area="Angebote" page="Position" details="@Model.DisplayName"></vc:page-header>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="OfferId" />
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger col-12"></div>
        <div class="form-group col-xs-6 col-sm-3">
            <label asp-for="QuantityValue" class="control-label"></label>
            <input asp-for="QuantityValue" class="form-control bg-dark" />
            <span asp-validation-for="QuantityValue" class="text-danger"></span>
        </div>
        <div class="form-group col-xs-6 col-sm-3">
            <label asp-for="QuantityUnit" class="control-label"></label>
            <input asp-for="QuantityUnit" class="form-control bg-dark" />
            <span asp-validation-for="QuantityUnit" class="text-danger"></span>
        </div>
        <div class="form-group col-xs-6 col-sm-3">
            <label asp-for="UnitPrice" class="control-label"></label>
            <input asp-for="UnitPrice" class="form-control bg-dark" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
        <div class="form-group col-xs-6 col-sm-3">
            <label asp-for="TotalPrice" class="control-label"></label>
            <input asp-for="TotalPrice" class="form-control bg-dark" readonly />
            <span asp-validation-for="TotalPrice" class="text-danger"></span>
        </div>

        <div class="form-group col-xs-12 col-sm-12">
            <label asp-for="Details" class="control-label"></label>
            <textarea asp-for="Details" class="form-control bg-dark"></textarea>
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>

        <div class="form-group col-12">
            <div class="btn-group mt-2"> 
                <a class="btn btn-outline-primary" title="Zurück"
                    asp-area="Offers"
                    asp-page="Details"
                    asp-route-id="@Model.OfferId">
                    <i class="bi bi-arrow-left-circle"></i>
                </a>
                <button type="submit" class="btn btn-primary" title="Bestätigen">
                    <i class="bi bi-check"></i>
                </button>
            </div>
        </div>
    </div>
</form>